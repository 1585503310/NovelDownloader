<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">


    <EditText
        android:id="@+id/et_search_top"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_margin="10dp"
        android:background="@drawable/search_background"
        android:drawableLeft="@drawable/explore_search_icon"
        android:drawablePadding="5dp"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/search_img_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/et_search_top"
        android:layout_alignRight="@id/et_search_top"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        app:srcCompat="@drawable/explore_search_close" />
</RelativeLayout>

